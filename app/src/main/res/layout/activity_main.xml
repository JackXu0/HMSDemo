<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_HuaweiIDDemo"
                style="@style/ButtonStyle"
                android:text="Huawei ID Demo"
                tools:ignore="HardcodedText"/>

            <Button
                android:id="@+id/btn_HuaweiLocationDemo"
                style="@style/ButtonStyle"
                android:text="Huawei Location Demo"
                tools:ignore="HardcodedText"/>

            <Button
                android:id="@+id/btn_HuaweiPushDemo"
                style="@style/ButtonStyle"
                android:text="Huawei Push Message Demo"
                tools:ignore="HardcodedText"/>

            <Button
                android:id="@+id/btn_HuaweiAdsDemo"
                style="@style/ButtonStyle"
                android:text="Huawei Ads Demo"
                tools:ignore="HardcodedText"/>
            <Button
                android:id="@+id/btn_HuaweiPayDemo"
                style="@style/ButtonStyle"
                android:text="Huawei Pay Demo"
                tools:ignore="HardcodedText"/>
            <Button
                android:id="@+id/btn_HuaweiMapDemo"
                style="@style/ButtonStyle"
                android:text="Huawei Map Demo"
                tools:ignore="HardcodedText"/>

            <Button
                android:id="@+id/btn_HuaweiMLDemo"
                style="@style/ButtonStyle"
                android:text="Huawei ML Demo"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_HuaweiScanDemo"
                style="@style/ButtonStyle"
                android:text="Huawei Scan Demo"
                tools:ignore="HardcodedText"/>

            <Button
                android:id="@+id/btn_HuaweiCameraDemo"
                style="@style/ButtonStyle"
                android:text="Huawei Camera Demo"
                tools:ignore="HardcodedText"/>

            <Button
                android:id="@+id/btn_GoogleSignIn"
                style="@style/ButtonStyle"
                android:text="Google Sign In"
                tools:ignore="HardcodedText"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>